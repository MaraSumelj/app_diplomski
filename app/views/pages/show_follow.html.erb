<% provide(:title, @title) %>
<div class="row">
<aside class="col-md-4">
<section class="user_info">

<h1><%= @page.name %></h1>
<span><b>Microposts:</b> <%= @page.microposts.count %></span>
</section>
<section class="stats">
<%= render 'shared/status_follower' %>
</section>
</aside>
<div class="col-md-8">
<h3><%= @title %></h3>

<% if @users.any? %>
<div class="user_avatars">
<% @users.each do |user| %>
<%= user.name%>
<%= link_to gravatar_for(user), user %>
<% end %>
</div>
<% end %>

</div>

</div>