<% @user.name %>
<div class="row">
<aside class="col-md-4">
<section class="user_info">
<h1>
<%= gravatar_for @user %>
<%= @user.name %>
</h1>
</section>
</aside>
<section class="status_following">
<%= render 'shared/status_following'%>
<% if @pages.any? %>
<% @pages.each do |page| %>
<%= link_to  page %>
<% end %>
</div>
<% end %>
</section>
</aside>
<div class="col-md-8">
<h3><%= @title %></h3>
</div>
</div>